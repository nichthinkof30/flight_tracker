<div class="site-wrapper">
  <div class="site-wrapper-inner">

    <div class="cover-container">

      <div class="masthead clearfix">
        <div class="inner">
        <h3 class="masthead-brand"><i class="fa fa-paper-plane-o fa-lg"></i>  AirAsia Flight Ticket Tracker</h3>
          <ul class="nav masthead-nav">
            <li><%= link_to 'Home', root_path %></li>
            <li class="active"><%= link_to 'Feedback', feedbacks_path %></li>
          </ul>
        </div>
      </div>

      <div class="inner cover">
        <h1 class="cover-heading"><i class="fa fa-usd fa-lg"></i>  <i>Feedback</i>  <i class="fa fa-usd fa-lg"></i></h1>
        <div class="panel panel-info">
          <div class="panel-body">
            <%= render partial: 'partials/controls/flash', locals: { flash: flash } %>

            <%= form_tag feedbacks_path, method: :post, role: 'form', class: 'form-horizontal' do %>
              <div class="form-group">
                <%= label_tag :sender_name, 'Name', class: 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= text_field_tag :sender_name, '', class: 'form-control' %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :sender_email, 'Email', class: 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= email_field_tag :sender_email, '', class: 'form-control', placeholder: "Your Personal Email", required: true %>
                </div>
              </div>

              <div class="form-group">
                <%= label_tag :comment, 'Comment', class: 'col-sm-4 control-label' %>
                <div class="col-sm-8">
                  <%= text_area_tag :comment, '', class: 'form-control', placeholder: "Comments", required: true %>
                </div>
              </div>

              <div class="form-group">
                <div class="col-sm-offset-4 col-sm-8">
                  <%= submit_tag 'Submit', class: 'btn btn-primary btn-block', disable_with: "Hold On..."%>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="mastfoot">
        <div class="inner">
          <p>Build By <a href="http://peter.virtualspirit.me">PETER WONG [VirtualSpirit]</a></p>
        </div>
      </div>

    </div>

  </div>
</div>